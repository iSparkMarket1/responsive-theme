<div class="main-service">
  <div class="container">
    <div class="parent-Service">
      <div class="child-service">
        <h2>{{ section.settings.Right_Main_Text }}</h2>
        <h3>
          {{ section.settings.Right_Sub_Con }}
        </h3>
        <ul>
          <li>{{ section.settings.Right_Linef }}</li>
          <li>{{ section.settings.Right_Lines }}</li>
          <li>{{ section.settings.Right_Linet }}</li>
          <li>{{ section.settings.Right_Lineff }}</li>
          <li>{{ section.settings.Right_Lineffi }}</li>
        </ul>
        <p>{{ section.settings.Right_Last_Con }}</p>
        <div class="Riight-button">
          <button>{{ section.settings.button_textt }}</button>
        </div>
      </div>
      <div class="cchild-service">
        <img
          src="{{ section.settings.Left_Image_pick | img_url: 'large' }}"
          alt="{{ section.settings.Left_Image_Heading }}"
        >
      </div>
    </div>
  </div>
</div>
