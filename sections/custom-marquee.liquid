{% schema %}
{
  "name": "Marquee Section",
  "settings": [
    {
      "type": "color",
      "id": "back_color",
      "label": "Section Background Color"
    },
    {
      "type": "text",
      "id": "fixed_text",
      "label": "Fixed Text",
      "default": "OWN THE"
    },
    {
      "type": "color",
      "id": "fixed_text_color",
      "label": "Fixed Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Marquee Text",
      "settings": [
        {
          "type": "text",
          "id": "marquee_text",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "marquee_image",
          "label": "Icon/Image"
        },
        {
          "type": "color",
          "id": "ma_te_color",
          "label": "Text Color"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Marquee Section",
      "blocks": [
        { "type": "text" },
        { "type": "text" },
        { "type": "text" },
        { "type": "text" },
        { "type": "text" },
        { "type": "text" }
      ]
    }
  ]
}
{% endschema %}

<div class="main-maruee" style="background-color: {{ section.settings.back_color }};">
  <div class="marquee-container" style="display: flex; align-items: center;">
    
    <!-- Fixed Text -->
    <span class="fixed-text" style="color: {{ section.settings.fixed_text_color }}; font-weight: bold; margin-right: 10px;">
  {{ section.settings.fixed_text }}
</span>

   <div class="marquee">
  <div class="marquee-content">
    {% for repeat in (1..2) %}
      {% for block in section.blocks %}
        <span class="marquee-item" style="color: {{ block.settings.ma_te_color | default: '#000000' }};">
          {% if block.settings.marquee_image %}
            <img src="{{ block.settings.marquee_image | img_url: 'master' }}" alt="Icon" class="marquee-icon" />
          {% endif %}
          {{ block.settings.marquee_text }}
        </span>
      {% endfor %}
    {% endfor %}
  </div>
</div>


  </div>
</div>

<style>
.marquee {
  overflow: hidden;
  white-space: nowrap;
  position: relative;
  width: 100%;
}

.marquee-content {
  display: inline-block;
  padding-left: 100%;
  animation: scroll-left 20s linear infinite;
}

.marquee-item {
  margin-right: 30px;
  display: inline-flex;
  align-items: center;
}

.marquee-icon {
  height: 16px;
  width: auto;
  margin-right: 5px;
}

@keyframes scroll-left {
  0% {
    transform: translateX(0%);
  }
  100% {
    transform: translateX(-100%);
  }
}
</style>