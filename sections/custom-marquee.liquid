{% schema %}
{
  "name": "Marquee Section",
  "settings": [
    {
      "type": "color",
      "id": "back_color",
      "label": "Section Background Color",
      "default": "#1e40af"
    },
    {
      "type": "text",
      "id": "fixed_text",
      "label": "Fixed Text (e.g., OWN THE)",
      "default": "OWN THE"
    },
    {
      "type": "color",
      "id": "fixed_text_color",
      "label": "Fixed Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Marquee Text",
      "settings": [
        {
          "type": "text",
          "id": "marquee_text",
          "label": "Marquee Text"
        },
        {
          "type": "color",
          "id": "ma_te_color",
          "label": "Text Color",
          "default": "#00bfff"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Marquee Section",
      "blocks": [
        { "type": "text" },
        { "type": "text" },
        { "type": "text" }
      ]
    }
  ]
}
{% endschema %}

<div class="main-maruee" style="background-color: {{ section.settings.back_color }};">
  <div class="marquee-container" style="display: flex; align-items: center; overflow: hidden;">

    <!-- Fixed Text -->
    <span class="fixed-text" style="color: {{ section.settings.fixed_text_color }}; font-weight: bold; margin-right: 10px; white-space: nowrap;">
      {{ section.settings.fixed_text }}
    </span>

    <!-- Marquee Scroll Text -->
    <div class="marquee">
  <div class="marquee-content">
    {% for repeat in (1..3) %}
      {% for block in section.blocks %}
        <span class="marquee-item" style="color: {{ block.settings.ma_te_color | default: '#000000' }};">
          {{ block.settings.marquee_text }}
        </span>
      {% endfor %}
    {% endfor %}
  </div>
</div>

  </div>
</div>

<style>
  .marquee {
    overflow: hidden;
    position: relative;
    width: 100%;
  }

  .marquee-content {
    display: inline-block;
    white-space: nowrap;
   animation: scroll-marquee 15s linear infinite;
  }

  .marquee-item {
    display: inline-block;
    margin-right: 40px;
    font-weight: 500;
  }

  @keyframes scroll-marquee {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
</style>

