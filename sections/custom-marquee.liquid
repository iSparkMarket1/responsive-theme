{% schema %}
{
  "name": "Marquee Section",
  "settings": [
    {
      "type": "color",
      "id": "back_color",
      "label": "Section Background Color",
      "default": "#1e40af"
    },
    {
      "type": "text",
      "id": "fixed_text",
      "label": "Fixed Text (e.g., OWN THE)",
      "default": "OWN THE"
    },
    {
      "type": "color",
      "id": "fixed_text_color",
      "label": "Fixed Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Marquee Text",
      "settings": [
        {
          "type": "text",
          "id": "marquee_text",
          "label": "Marquee Text"
        },
        {
          "type": "color",
          "id": "ma_te_color",
          "label": "Text Color",
          "default": "#00bfff"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Marquee Section",
      "blocks": [
        { "type": "text" },
        { "type": "text" },
        { "type": "text" }
      ]
    }
  ]
}
{% endschema %}

<div class="main-marquee" style="background-color: {{ section.settings.back_color }};">
  <div class="marquee-wrapper">

    <!-- Fixed Text (30%) -->
    <div class="fixed-text" style="color: {{ section.settings.fixed_text_color }};">
      {{ section.settings.fixed_text }}
    </div>

    <!-- Scrolling Marquee (70%)) -->
    <div class="marquee">
      <div class="marquee-track">
        {% for repeat in (1..3) %}
          {% for block in section.blocks %}
            <span class="marquee-item" style="color: {{ block.settings.ma_te_color | default: '#000000' }};">
              {{ block.settings.marquee_text }}
            </span>
          {% endfor %}
        {% endfor %}
      </div>
    </div>

  </div>
</div>

<style>
  .main-marquee {
    padding: 10px 0;
  }

  .marquee-wrapper {
    display: flex;
    align-items: center;
    width: 100%;
    overflow: hidden;
  }

  .fixed-text {
    width: 30%;
    font-weight: 700;
    font-size: 20px;
    white-space: nowrap;
    padding-left: 20px;
  }

  .marquee {
    width: 70%;
    overflow: hidden;
    position: relative;
  }

  .marquee-track {
    display: inline-block;
    white-space: nowrap;
    animation: scroll-marquee 15s linear infinite;
  }

  .marquee-item {
    display: inline-block;
    margin-right: 40px;
    font-size: 18px;
    font-weight: 500;
  }

  @keyframes scroll-marquee {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
</style>


