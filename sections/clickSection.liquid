<!-- custom-services-section.liquid -->
<div class="main-click">
  <div class="container">
    <div class="click-main_heading">
      <h1>{{ section.settings.heading }}</h1>
    </div>
    <div class="click-main_Subheading">
      <h3>{{ section.settings.subheading }}</h3>
    </div>
    <div class="click-main_cont">
      <p>{{ section.settings.description }}</p>
    </div>
    <div class="pc-click">
      <div class="child-click">
        <div class="sidebar">
          {% for block in section.blocks %}
            <div class="sidebar-item" data-content="content{{ forloop.index }}">
              <h2>{{ block.settings.sidebar_title }}</h2>
            </div>
          {% endfor %}
        </div>

        <div class="content-area">
          {% for block in section.blocks %}
            <div id="content{{ forloop.index }}" class="content" style="display: none;">
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.sidebar_title }}">
              <h2>{{ block.settings.sidebar_title }}</h2>
              <h6>{{ block.settings.content_description }}</h6>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
        var sidebarItems = document.querySelectorAll('.sidebar-item');
        var contents = document.querySelectorAll('.content');

        sidebarItems.forEach(function(item) {
            item.addEventListener('click', function() {
                // Hide all content
                contents.forEach(function(content) {
                    content.style.display = 'none';
                });

                // Show the clicked content
                var contentId = this.getAttribute('data-content');
                document.getElementById(contentId).style.display = 'block';
            });
        });
    });
  </script>
</div>

{% schema %}
{
    "name": "Custom Services Section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Main Heading",
            "default": "SERVICES"
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "Subheading",
            "default": "What We Tow"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "From sleek luxury cars to rugged caravans, we have you covered..."
        }
    ],
    "blocks": [
        {
            "type": "block",
            "name": "Service Block",
            "settings": [
                {
                    "type": "text",
                    "id": "sidebar_title",
                    "label": "Sidebar Title",
                    "default": "MOTOR VEHICLES"
                },
                {
                    "type": "textarea",
                    "id": "content_description",
                    "label": "Content Description",
                    "default": "For motorbike towing, we are the clear choice..."
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Content Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Custom Services Section"
        }
    ]
}
{% endschema %}
