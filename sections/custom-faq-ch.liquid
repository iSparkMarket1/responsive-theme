{% stylesheet %}
.faq-section {
  max-width: 800px;
  margin: 0 auto;
  padding: 40px 20px;
}

.faq-title {
  text-align: center;
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 10px;
}

.faq-subtitle {
  text-align: center;
  font-size: 16px;
  color: #6B7280;
  margin-bottom: 40px;
}

.faq-item {
  margin-bottom: 10px;
}

.faq-question {
  background-color: #0F161F;
  color: #fff !important;
  padding: 15px 20px;
  font-weight: bold;
  cursor: pointer;
  position: relative;
  transition: background-color 0.3s ease;
}

.faq-question.active {
  background-color: #223D68;
}

.faq-question::after {
  content: "+";
  position: absolute;
  right: 20px;
}

.faq-question.active::after {
  content: "â€“";
}

.faq-answer {
  background-color: #223D68;
  padding: 15px 20px;
  display: none;
  color: #fff;
  max-height: 300px; /* max height for scroll */
  overflow-y: auto; /* enable vertical scroll */
  border-top: 1px solid #fff;
}

.faq-answer::-webkit-scrollbar {
  width: 6px;
}

.faq-answer::-webkit-scrollbar-thumb {
  background-color: #0F161F;
  border-radius: 3px;
}
{% endstylesheet %}

<div class="faq-section">
  <div class="faq-title">{{ section.settings.title }}</div>
  <div class="faq-subtitle">{{ section.settings.subtitle }}</div>

  {% for block in section.blocks %}
    <div class="faq-item">
      <div class="faq-question">{{ block.settings.question }}</div>
      <div class="faq-answer">{{ block.settings.answer }}</div>
    </div>
  {% endfor %}
</div>

<script>
  $(document).ready(function () {
    $('.faq-question').on('click', function () {
      const $this = $(this);
      const $answer = $this.next('.faq-answer');

      if ($this.hasClass('active')) {
        $this.removeClass('active');
        $answer.slideUp();
      } else {
        $('.faq-question').removeClass('active');
        $('.faq-answer').slideUp();
        $this.addClass('active');
        $answer.slideDown();
      }
    });
  });
</script>


{% schema %}
{
  "name": "FAQ Accordion",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Custom FAQ Accordion",
      "category": "Custom"
    }
  ]
}
{% endschema %}

