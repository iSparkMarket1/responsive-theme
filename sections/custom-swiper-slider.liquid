<!-- In theme.liquid head -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"/>

<!-- Before </body> -->
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>



<!-- sections/testimonial-slider.liquid -->
<section class="testimonial-slider">
  <div class="swiper testimonialSwiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide" style="background-image: url({{ block.settings.background_image | img_url: 'master' }}); background-size: cover; background-position: center;">
          <div class="overlay" style="background-color: rgba(0, 0, 0, 0.5); padding: 4rem 2rem; text-align: center; color: white;">
            <div class="icon" style="font-size: 2rem; margin-bottom: 1rem;">
              <img src="{{ block.settings.icon | img_url: '50x50' }}" alt="icon" style="display: inline-block;">
            </div>
            <h2 style="font-size: 1.5rem; font-weight: bold;">{{ block.settings.testimonial_text }}</h2>
            <p style="margin-top: 1rem; font-weight: 600;">{{ block.settings.client_name }}</p>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Swiper Controls -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".testimonialSwiper", {
      loop: true,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
    });
  });
</script>
