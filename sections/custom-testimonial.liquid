{% schema %}
{
  "name": "Custom Testimonial",
  "tag": "section",
  "class": "custom-rich-text-section",
  "settings": [
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>This is some <strong>custom rich text</strong>. You can edit this in the theme editor.</p>"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "text",
      "id": "section_class",
      "label": "Extra CSS classes",
      "default": ""
    }
  ],
  "presets": [
    {
      "name": "Custom Testimonial"
    }
  ]
}
{% endschema %}

<div class="py-8 px-4 {{ section.settings.section_class }}">
  <div class="max-w-4xl mx-auto text-{{ section.settings.text_align }}">
    {{ section.settings.content }}
  </div>
</div>
