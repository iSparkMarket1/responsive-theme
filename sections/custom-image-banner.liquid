{% schema %}
{
  "name": "Split Hero Banner",
  "tag": "section",
  "class": "split-hero-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "PUSH PAST POSSIBLE"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "FORMULAS FOR LIFE PERFORMANCE"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "default": 60,
      "min": 0,
      "max": 100,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "default": 60,
      "min": 0,
      "max": 100,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Split Hero Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<style>
  .split-hero-banner-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-size: cover;
    background-position: center;
    flex-wrap: wrap;
    padding-left: 20px;
    padding-right: 20px;
  }

  .split-hero-content {
    max-width: 50%;
    color: #000;
  }

  .split-hero-heading {
    font-size: 42px;
    font-weight: 800;
    margin-bottom: 10px;
  }

  .split-hero-subheading {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 24px;
    color: #004080;
  }

  .split-hero-btn {
    display: inline-block;
    padding: 12px 24px;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    font-weight: 600;
    border-radius: 4px;
  }

  .split-hero-image {
    max-width: 45%;
    text-align: right;
  }

  .split-hero-image img {
    max-width: 100%;
    height: auto;
  }

  @media screen and (max-width: 768px) {
    .split-hero-banner-wrapper {
      flex-direction: column;
      text-align: center;
    }
    .split-hero-content,
    .split-hero-image {
      max-width: 100%;
    }
  }
</style>

<section
  class="split-hero-banner"
  style="background-image: url({{ section.settings.background_image | image_url: 'master' }}); padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="split-hero-banner-wrapper page-width">
    <div class="split-hero-content">
      {% if section.settings.heading %}
        <h2 class="split-hero-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading %}
        <div class="split-hero-subheading">{{ section.settings.subheading }}</div>
      {% endif %}
      {% if section.settings.button_label and section.settings.button_link %}
        <a href="{{ section.settings.button_link }}" class="split-hero-btn">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
    <div class="split-hero-image">
      {% if section.settings.right_image %}
        <img src="{{ section.settings.right_image | image_url: 'master' }}" alt="Right Side Image">
      {% endif %}
    </div>
  </div>
</section>
